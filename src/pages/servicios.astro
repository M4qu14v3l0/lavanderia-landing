---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <nav>
        <div>
            <a href="/"><h2>LavaTodo</h2></a>
            <ul>
                <a href="/servicios"><li>¿Cómo funciona?</li></a>
                <a href="#"><li>Contáctanos</li></a>
            </ul>
        </div>
    </nav>

    <section class="section-services">
        <h2>¿Cómo funciona?</h2>
        <img src="/pictures/timeline.svg" />
    </section>
</Layout>

<style>
    nav {
        width: 100%;
        background-color: #0a3143;
    }

    nav div {
        padding: 0px 100px;
        display: flex;
        justify-content: space-between;
        color: white;
        font-size: 20px;
    }

    nav div ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 20px;
        align-items: center;
    }

    nav a {
        text-decoration: none;
        color: white;
    }

    .section-services {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 100px;
    }

    .section-services h2 {
        color: #276e90;
        font-size: 60px;
    }

    .section-services img {
        height: fit-content;
        width: 900px;
        object-fit: cover;
        pointer-events: none;
    }
</style>
